<%= semantic_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.inputs do %>
    <%= f.input :email %>
    <%= f.inputs :roles %>
    <%= f.input :id, as: :string, input_html: { readonly: true } %>
    <%= f.input :created_at, as: :string, input_html: { readonly: true } %>
    <%= f.input :current_sign_in_ip, input_html: { readonly: true } %>

  <% end %>
  <%= f.actions do %>
    <% f.action :submit, button_html: { class: 'btn btn-primary' } %>
  <% end %>
<% end %>
